{
  "name": "f1-blog",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:service": "jest src/app/core/services/f1-api.service.spec.ts",
    "test:components": "jest --testMatch '**/src/app/features/**/*.spec.ts'",
    "test:navbar": "jest src/app/shared/components/navbar/navbar.component.spec.ts",
    "test:drivers": "jest src/app/features/drivers/ src/app/shared/pipes/country-flag.pipe.spec.ts",
    "test:coverage:drivers": "jest src/app/features/drivers/ src/app/shared/pipes/country-flag.pipe.spec.ts --coverage",
    "test:pipes": "jest src/app/shared/pipes/",
    "test:all": "npm run test:drivers && npm run test:pipes",
    "test:navigation": "jest src/app/features/races/pages/race-detail/ src/app/shared/pipes/lap-time.pipe.spec.ts src/app/features/races/services/race-store.service.spec.ts",
    "test:coverage:navigation": "jest src/app/features/races/pages/race-detail/ src/app/shared/pipes/lap-time.pipe.spec.ts src/app/features/races/services/race-store.service.spec.ts --coverage",
    "test:pipes:complex": "jest src/app/shared/pipes/lap-time.pipe.spec.ts"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "bulma": "^1.0.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.16",
    "@angular/cli": "^19.2.16",
    "@angular/compiler-cli": "^19.2.0",
    "@testing-library/angular": "^17.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@types/jasmine": "~5.1.0",
    "@types/jest": "^30.0.0",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.6.2",
    "typescript": "~5.7.2"
  }
}
